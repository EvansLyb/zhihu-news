.news-header{
    position: relative;
    width: 100%;
    height: 219px;
    color: #FFF;
}

.news-img{
    width: 100%;
    height: 219px;
}

.news-title{
    position: absolute;
    bottom: 36px;
    left: 8px;
    font-size: 16px;
}

.news-source {
    position: absolute;
    bottom: 8px;
    font-size: 14px;
    right: 8px;   
}

.news-content{
    font-size: 14px;
    color: #616466;
    padding-left: 16px;
    padding-right: 16px;
    padding-top: 10px;
    background-color: #FFF;
    line-height: 1.5;
}