.news-list-wrapper {
    padding-top: 30rpx;
}
.news-card-wrapper {
    width: 95%;
}
.news-card-wrapper .news-card {
    width: 100%;
    height: 90px;
    display: flex;
    flex-direction: row;
    border: 1px solid transparent;
    border-color: #ddd;
    border-radius: 4px;
    box-shadow: 0 0 8px #ddd;
    margin: 8px 0 0 0;
}
.news-title-wrapper {
    width: 200px;
    float: right;
    padding-left: 5px;
    padding-top: 8px;
    word-wrap: break-word;
}
.news-img-wrapper {
    display: inline-block;
    width: 90px;
    height: 90px;
}
.news-img-wrapper .news-img {
    width: 100%;
    height: 100%;
    background-color: #fff;
    border-radius: 4px 0 0 4px;
}
